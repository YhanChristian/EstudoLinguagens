<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_custom_progress_bar"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="24dp"
    app:cardBackgroundColor="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_title_custom_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:textAlignment="center"
            style="@style/TextAppearance.MaterialComponents.Headline6" />


        <TextView
            android:id="@+id/tv_description_custom_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_description"
            android:textAlignment="center"
            style="@style/TextAppearance.MaterialComponents.Body1"/>

        <ProgressBar
            android:id="@+id/progress_bar_custom_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/black"
            android:progress="80"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
