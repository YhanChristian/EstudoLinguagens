<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewCartao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/numero_cartao" />

    <Button
        android:id="@+id/btnScanCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="scanCartao"
        android:text="@string/scan_card"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCartao" />

    <TextView
        android:id="@+id/textViewDataExp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_expiracao"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btnScanCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCartao" />

</android.support.constraint.ConstraintLayout>